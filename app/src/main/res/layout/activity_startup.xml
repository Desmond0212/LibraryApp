<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_forgotpassword"
    android:orientation="vertical"
    tools:context="com.example.desmond.libraryapp.startupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/app_icon2_round" />

        <TextView
            android:id="@+id/app_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/anton"
            android:gravity="center"
            android:text="Welcome to APU Library Catalogue"
            android:textColor="#2c160c"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/app_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/orbitron"
            android:gravity="bottom|center_vertical|center"
            android:text="Powered by DESMOND WONG WAY HOU"
            android:textColor="@color/btn_AdvancedSearch"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--ImageView
            android:id="@+id/app_logo"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="bottom|center_vertical|center"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/app_dev2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/orbitron"
            android:gravity="bottom|center_vertical|center"
            android:text="DESMOND WWH"
            android:textColor="@color/btn_AdvancedSearch"
            android:textSize="15sp"
            android:textStyle="bold"-->

    </LinearLayout>

</LinearLayout>
