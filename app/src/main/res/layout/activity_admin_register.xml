<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_forgotpassword"
    tools:context="com.example.desmond.libraryapp.AdminRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="303dp"
                android:layout_height="213dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                app:srcCompat="@drawable/logo_apu" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/patua_one"
                android:gravity="center"
                android:text="@string/lbl_newadmin"
                android:textColor="@color/btn_AdvancedSearch"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtAdminEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_edittext"
                android:drawableLeft="@drawable/icon_adminemail"
                android:hint="  EMAIL"
                android:padding="15dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="#69757A"
                tools:ignore="HardcodedText,TextFields" />

            <EditText
                android:id="@+id/txtAdminFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_edittext"
                android:drawableLeft="@drawable/icon_adminname"
                android:hint="  FULL NAME"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="#69757A"
                tools:ignore="HardcodedText,TextFields" />

            <EditText
                android:id="@+id/txtAdminPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_edittext"
                android:drawableLeft="@drawable/icon_adminpassword"
                android:hint="  PASSWORD"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="#69757A"
                tools:ignore="HardcodedText,TextFields" />

            <EditText
                android:id="@+id/txtAdminConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_edittext"
                android:drawableLeft="@drawable/icon_confirmpass"
                android:hint="  CONFIRM PASSWORD"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="#69757A"
                tools:ignore="HardcodedText,TextFields" />

            <Button
                android:id="@+id/btnAdminRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/fill_layout_color"
                android:drawableLeft="@drawable/icon_register"
                android:fontFamily="@font/crete_round"
                android:gravity="center"
                android:padding="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="@string/btn_registeradmin"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!--Button
                android:id="@+id/btnAdminLinkToLogin"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:text="@string/btn_linktomain"
                android:textColor="#390000"
                android:textSize="18sp" -->


        </LinearLayout>

    </ScrollView>

</LinearLayout>
